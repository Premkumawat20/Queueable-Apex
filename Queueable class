//Create a Queueable Apex class that inserts the same Contact for each Account for a specific state.

public class AddPrimaryContact implements Queueable {
    
    private contact inputcontact;
    private string state;
    
    public AddPrimaryContact(Contact con , string abbrevation){
        this.inputcontact=con;
        this.state=abbrevation;
        
    }
    
    public void execute(QueueableContext context){
        
        List<Account>accs=[select id from Account where BillingState=:state LIMIT 200];
        List<Contact>cons=new List<Contact>();
        
        for(Account acc : accs){
            Contact c= new Contact();
            c.LastName='test';
            c.AccountID=acc.Id;
            cons.add(c);
        }
        insert cons;
    }

}

// To call this class create a instance and then call
AddPrimaryContact test=new AddPrimaryContact(new Contact(lastname='test'),'NY');
Id jobId = System.enqueueJob(test);

(or)
System.enqueueJob(new AddPrimaryContact(new Contact(LastName='test'), 'NY'));
